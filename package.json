{
    "name": "web_llm",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint . && prettier . --check",
        "lint:commit": "commitlint --from=HEAD~1",
